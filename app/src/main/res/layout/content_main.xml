<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    android:gravity="top">
    <!--android:background="@mipmap/back"-->

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_description"
        android:gravity="top|center"
        android:textSize="@dimen/description_text_size"
        android:textColor="#6e6e6e"
        android:textAllCaps="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:gravity="center">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame11">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainButton"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/train_butt"
                    android:background="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/train_square"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:background="@null"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame12"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/train100RandomButton"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/train_100"
                    android:background="@null"
                    android:visibility="visible"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/trainButton"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/train_100_square"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:background="@null"/>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout1"
            android:gravity="center"
            android:layout_marginTop="-75dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame21"
                >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/staticTestButton"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/static_test"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/groupButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/static_test_square"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:background="@null"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:id="@+id/linearLayout3"
            android:gravity="center"
            android:layout_marginTop="-75dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame31"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cameraTestButton"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/camera_test"
                    android:background="@null" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/camera_test_square"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:background="@null"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame32"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/testAccuracyButton"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/test_accuracy"
                    android:background="@null"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/test_accuracy_square"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:background="@null"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:id="@+id/linearLayout4"
            android:gravity="center"
            android:layout_marginTop="-75dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame32"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/groupButton"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/group_pictures"
                    android:background="@null"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/group_pictures_square"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:background="@null"/>

            </FrameLayout>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>